{% extends 'default/acceuil.html.twig' %}

{% block contents %}
<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Colis</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->

<!--== Pricing Area Start ==-->
<section id="pricing-page-area" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Pricing Content Start -->
            <div class="col-lg-8">
                <div class="pricing-details-content">
                    <div class="row">
                        {% for colis in colis  %}
                        <!-- Single Pricing Table -->
                        <div class="col-lg-6 col-md-6 text-center">
                            <div class="single-pricing-table">
                                <h3>Etat :Accepté</h3>
                                <h2>Categorie :{{ cat }}</h2>
                                <h5>{{colis.depart}}--->{{ colis.destination }}</h5>

                                <ul class="package-list">
                                    <li>Poids Colis :{{ colis.poids }}</li>
                                    <li>Nom Expediteur :{{ colis.nomExpediteur }}</li>
                                    <li>Mail Expediteur :{{ colis.mailExpediteur }}</li>
                                    <li>Nom Destinataire :{{ colis.nomDestinataire }}</li>
                                    <li>Mail Destinataire :{{ colis.mailDestinataire }}</li>
                                    <li>
                                        <a  href="{{ path('MiseAjour', { 'idC': colis.idC }) }}" >Marquer Comme Livré</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- Single Pricing Table -->
                          {% endfor %}

                    </div>
                </div>
            </div>
            <!-- Pricing Content End -->

            <!-- Sidebar Area Start -->
            <div class="col-lg-4">
                <div class="sidebar-content-wrap m-t-50">
                    <!-- Single Sidebar Start -->
                    <div class="single-sidebar">
                        <h3>POUR PLUS D'Informations</h3>

                        <div class="sidebar-body">
                            <p><i class="fa fa-mobile"></i> +216 22 222 222</p>
                            <p><i class="fa fa-clock-o"></i> Lundi-Vendredi 09.00-17.00</p>
                        </div>
                    </div>
                    <!-- Single Sidebar End -->

                </div>
            </div>
            <!-- Sidebar Area End -->
        </div>
    </div>
</section>
<!--== FAQ Area End ==-->
{% endblock %}