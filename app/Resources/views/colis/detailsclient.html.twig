{% extends 'default/acceuil.html.twig' %}

{% block contents %}
    <!--== Page Title Area Start ==-->
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>Colis</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->
    <!--== Car List Area Start ==-->
    <section id="car-list-area" class="section-padding"  >
        <div class="container">
            <div class="row">
                <!-- Car List Content Start -->


                <div class="col-lg-8">
                    <div class="car-details-content">
                        <h2>{{ vehicule.position }}--{{ vehicule.destination }}<span class="price">Type: <b>{{ vehicule.type }}</b></span></h2>
                        <div class="car-preview-crousel">
                            <div class="single-car-preview">
                                <img src="{{ asset('cardoor/assets/img/car/car-5.jpg')}}" >
                            </div>
                            <div class="single-car-preview">
                                <img src="{{ asset('cardoor/assets/img/car/car-1.jpg')}}">
                            </div>
                            <div class="single-car-preview">
                                <img src="{{ asset('cardoor/assets/img/car/car-6.jpg')}}">
                            </div>
                        </div>
                        <div class="car-details-info">
                            <div class="technical-info">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="tech-info-table">
                                            <table class="table table-bordered">
                                                <tr>
                                                    <th>Depart</th>
                                                    <td>{{ vehicule.position }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Destination</th>
                                                    <td>{{vehicule.destination}}</td>
                                                </tr>
                                                <tr>
                                                    <th>Marque</th>
                                                    <td>{{vehicule.marque}}</td>
                                                </tr>
                                                <tr>
                                                    <th>Modele</th>
                                                    <td>{{vehicule.modele}}</td>
                                                </tr>
                                                <tr>
                                                    <th>Couleur</th>
                                                    <td>{{vehicule.couleur}}</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Car List Content End -->

                <!-- Sidebar Area Start -->
                <div class="col-lg-4">
                    <div class="sidebar-content-wrap m-t-50">
                        <!-- Single Sidebar Start -->
                        <div class="single-sidebar">
                            <h3>Informations Sur Le Chauffeur</h3>

                            <div class="sidebar-body">
                                <p>Nom :{{ user.nom }}</p>
                                <p>Prenom :{{ user.prenom }}</p>
                                <p>Numero De Telephone :{{ user.tel }}</p>
                                <p>Adresse Mail :{{ user.email }}</p>
                            </div>
                        </div>
                        <!-- Single Sidebar End -->


                    </div>
                </div>
                <!-- Sidebar Area End -->
            </div>
        </div>
    </section>
    <!--== Car List Area End ==-->
{% endblock %}