{% extends 'default/acceuil.html.twig' %}

{% block contents %}
    <!--== Page Title Area Start ==-->
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>Colis</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->
    <!--== Car List Area Start ==-->
    <section id="car-list-area" class="section-padding"  >
        <div class="container">
            <div class="row">
                <!-- Car List Content Start -->


                <div class="col-lg-8">
                    <div class="car-details-content">
                        <h2>{{ colis.depart }}--{{ colis.destination }}<span class="price">Reference Colis: <b>{{ colis.idC }}</b></span></h2>
                        <div class="car-preview-crousel">
                            <div class="single-car-preview">
                                <img src="{{ asset('cardoor/assets/img/car/car-5.jpg')}}" >
                            </div>
                            <div class="single-car-preview">
                                <img src="{{ asset('cardoor/assets/img/car/car-1.jpg')}}">
                            </div>
                            <div class="single-car-preview">
                                <img src="{{ asset('cardoor/assets/img/car/car-6.jpg')}}">
                            </div>
                        </div>
                        <div class="car-details-info">
                            <div class="technical-info">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="tech-info-table">
                                            <table class="table table-bordered">
                                                <tr>
                                                    <th>Depart</th>
                                                    <td>{{ colis.depart }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Destination</th>
                                                    <td>{{colis.destination}}</td>
                                                </tr>
                                                <tr>
                                                    <th>Poids</th>
                                                    <td>{{colis.poids}}</td>
                                                </tr>
                                                <tr>
                                                    <th>Categorie</th>
                                                    <td>{{cat}}</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>


                                </div>
                            </div>
                                {% if ((colis.etat==0) or(colis.etat==1))  %}
                                <div class="input-submit">
                                    <button type="submit" ><a href="{{ path('Accept', { 'idC': colis.idC }) }}">Accepter La Demande</a></button>
                                    <button type="reset"><a href="{{ path('Refusee', { 'idC': colis.idC }) }}" >Refuser La Demande</a></button>
                                </div>
                                {% endif %}
                        </div>
                    </div>
                </div>
                <!-- Car List Content End -->

                <!-- Sidebar Area Start -->
                <div class="col-lg-4">
                    <div class="sidebar-content-wrap m-t-50">
                        <!-- Single Sidebar Start -->
                        <div class="single-sidebar">
                            <h3>Informations Sur L'Expediteur</h3>

                            <div class="sidebar-body">
                                <p>Nom :{{ user.nom }}</p>
                                <p>Prenom :{{ user.prenom }}</p>
                                <p>Numero De Telephone :{{ user.tel }}</p>
                                <p>Adresse Mail :{{ user.email }}</p>
                            </div>
                        </div>
                        <!-- Single Sidebar End -->

                        <!-- Single Sidebar Start -->
                        <div class="single-sidebar">
                            <h3>Informations Sur Le Destinataire</h3>
                            <div class="sidebar-body">
                                <p>Usernale :{{ colis.nomDestinataire }}</p>
                                <p>Numero De Telephone :{{ colis.telDestinataire }}</p>
                                <p>Adresse Mail :{{ colis.mailDestinataire }}</p>
                            </div>
                        </div>
                        <!-- Single Sidebar End -->

                    </div>
                </div>
                <!-- Sidebar Area End -->
            </div>
        </div>
    </section>
    <!--== Car List Area End ==-->
{% endblock %}