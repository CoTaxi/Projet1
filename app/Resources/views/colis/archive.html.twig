{% extends'layout.html.twig' %}
        {% block bg %}
            <section class="inner-banner">
                <div class="container">
                    <ul class="thm-breadcrumb">
                        <li><a href="index-2.html">TaxiCo</a></li>
                        <li><span class="sep">.</span></li>
                        <li><span class="page-title"> Livraison Colis</span></li>
                    </ul><!-- /.thm-breadcrumb -->
                    <h2>Archive</h2>
                </div><!-- /.container -->
            </section><!-- /.inner-banner -->
        {% endblock %}
{% block contents %}
    <!--== Page Title Area Start ==-->
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <span class="title-line"><i class="fa fa-car"></i></span>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->

    <!--== Pricing Area Start ==-->
    <section id="pricing-page-area" class="section-padding">
        <div class="container">
            <div class="row">
                <!-- Pricing Content Start -->
                <div class="col-lg-8">
                    <div class="pricing-details-content">
                        <div class="row">
                            {% for colis in colis %}
                                <div class="col-lg-4">
                                    <div class="single-offer-one hvr-float-shadow">
                                        {% if (cat=="Categorie Lourd") %}
                                            <div class="image-block">
                                                <a href="{{ path('colis_showModal', { 'idC': colis.idC }) }}"><i class="fa fa-link"></i></a>
                                                <img src="{{ asset('TaxiCo/images/lourd.png') }}"  style="height: 250px;width: 350px" alt="Awesome Image" />
                                            </div><!-- /.image-block -->
                                        {% endif %}

                                        {% if (cat=="Categorie Leger") %}
                                            <a href="{{ path('colis_showModal', { 'idC': colis.idC }) }}"><i class="fa fa-link"></i></a>
                                            <img src="{{ asset('TaxiCo/images/leger.png') }}"  style="height: 250px;width: 250px" alt="Awesome Image" />
                                            </a>
                                        {% endif %}

                                        {% if (cat=="Categorie Fragile") %}
                                            <a href="{{ path('colis_showModal', { 'idC': colis.idC }) }}"><i class="fa fa-link"></i></a>
                                            <img src="{{ asset('TaxiCo/images/fragile.png') }}"  style="height: 250px;width: 250px" alt="Awesome Image" />

                                        {% endif %}
                                        <div class="text-block">
                                            <h3><a href="#">Traget : {{ colis.depart }},{{ colis.destination }}</a></h3>
                                            <p> <h6>Poids :</h6> {{ colis.poids }}</p>
                                            <p><h6>Categorie :</h6> {{cat}}</p>
                                        </div><!-- /.text-block -->
                                    </div><!-- /.single-offer-one -->
                                </div><!-- /.col-lg-4 -->
                            {% endfor %}

                        </div>
                    </div>
                </div>
                <!-- Pricing Content End -->

                <!-- Sidebar Area Start -->
                <div class="col-lg-4">
                    <div class="sidebar-content-wrap m-t-50">
                        <!-- Single Sidebar Start -->
                        <div class="single-sidebar">
                            <h3>POUR PLUS D'Informations</h3>

                            <div class="sidebar-body">
                                <p><i class="fa fa-mobile"></i> +216 22 222 222</p>
                                <p><i class="fa fa-clock-o"></i> Lundi-Vendredi 09.00-17.00</p>
                            </div>
                        </div>
                        <!-- Single Sidebar End -->

                    </div>
                </div>
                <!-- Sidebar Area End -->
            </div>
        </div>
    </section>
    <!--== FAQ Area End ==-->
{% endblock %}