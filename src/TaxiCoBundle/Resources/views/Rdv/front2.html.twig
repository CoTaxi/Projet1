{% extends "//layout.html.twig" %}
{% block title %} Acceuil {% endblock %}
 {% block cnx %}

     {% if (user != null ) %}

         <a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-user-circle"></i>LOGOUT</a>

         <a href="#"><i class="fa fa-envelope"></i>{{ user.Email }}</a>
     {% endif %}
     {% if (user == null)%}
         <a href="{{ path('fos_user_security_login') }}"><i class="fa fa-user-circle"></i>Sign In</a>
     {% endif %}
 {% endblock %}
{% block body %}
    {% block bg %}
        <section class="inner-banner">
            <div class="container">
                <ul class="thm-breadcrumb">
                    <li><a href="index-2.html">TaxiCo</a></li>
                    <li><span class="sep">.</span></li>
                    <li><span class="page-title">Maintenance</span></li>
                </ul><!-- /.thm-breadcrumb -->
                <h2>Liste des rendez vous</h2>
            </div><!-- /.container -->
        </section><!-- /.inner-banner -->
    {% endblock %}
    {% block contents %}


        <section class="single-blog-details-page">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="comments-block">
                            <div class="block-title">
                                <h2><i class="fa fa-wrench text-success"></i> Vos Rendez-Vous :</h2>
                            </div><!-- /.block-title -->
                            {% for s in rdvs %}
                                <div class="single-comment-one">
                                    <div class="image-block">
                                        <div class="inner-block">
                                            <img src="{{ asset ('TaxiCo/images/background/cle.png') }}"
                                                 alt="Awesome Image"/>
                                        </div><!-- /.inner-block -->
                                    </div><!-- /.image-block -->
                                    <div class="text-block">
                                        <h3>
                                            {{ s.service.name }}
                                        </h3>

                                        <h5><i class="fa fa-clock-o"> </i><span
                                                    class="date-line">{{ s.garage.name }}</span>
                                        </h5>
                                        <h5><i class="fa fa-clock-o"> </i><span
                                                    class="date-line">{{ s.dateRdv|date("m/d/Y")}}</span>
                                        </h5>
                                        <a href="{{ path('updatedispordv', {'id':s.idRdv}) }}"
                                           class="reply-btn"><i class="fa fa-trash-o"></i> Annuler</a>

                                    </div>
                                </div>
                            {% endfor %}
                        </div><!-- /.text-block -->
                    </div><!-- /.single-comment-one -->
                </div>
            </div>
        </section>

    {% endblock %}
{% endblock %}


