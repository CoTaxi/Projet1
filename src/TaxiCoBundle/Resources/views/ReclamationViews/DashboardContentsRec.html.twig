{% extends "//base.html.twig" %}
{% block stylesheets %}

{% endblock %}
{% block contents %}
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Tableau de bord<a
                                href="{{ path('taxi_co__backListCardRec') }}">
                            <button type="button" class="btn btn-outline-success btn-sm" id="card"><i
                                        class="fa fa-mobile"></i> Card
                            </button>
                        </a>
                    </h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="#">Dashboard</a></li>
                        <li><a href="#">Table</a></li>
                        <li class="active">Data table</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content mt-3" id="con">
        <div id="right-panel" class="right-panel">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Tableau des données </strong>
                                <span class="badge badge-success float-right" style="margin-left:4px; "><a
                                            href="{{ path('taxi_co__backlistTRec') }}">
                                    <i class="fa fa-check-square text-light"></i>
                                </a></span>
                                <span class="badge badge-warning float-right" style="margin-left:4px; "><a
                                            href="{{ path('taxi_co__backlistCTRec') }}">
                                    <i class="fa fa-spinner text-light"></i>
                                </a></span>
                                <span class="badge badge-danger float-right" style="margin-left:4px; "><a
                                            href="{{ path('taxi_co__backlistNTRec') }}">
                                    <i class="fa fa-exclamation text-light"></i>
                                </a></span>
                                <span class="badge badge-secondary float-right" style="margin-left:4px; "><a
                                            href="{{ path('taxi_co__backlistArchRec') }}">
                                    <i class="fa fa-archive text-light"></i>
                                </a></span>
                                <span class="badge badge-info float-right"><a href="{{ path('taxi_co__backListRec') }}">
                                    <i class="fa fa-tasks text-light"></i>
                                </a></span>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export"
                                       class="table table-striped table-bordered">
                                    <thead>
                                    <tr role="row">
                                        <th>Type/Objet</th>
                                        <th>Chauffeur</th>
                                        <th>Message</th>
                                        <th>Etat</th>
                                        <th>Date/Temps</th>
                                        <th>Réponse admin</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {#                                {{ form_start(form) }}#}
                                    {% for entity in rec %}
                                        <tr role="row">
                                        {#                                            <td>{{ entity.idR }}</td>#}
                                        <td>{{ entity.Objet.titre }}</td>
                                            {% if entity.Objet.titre != 'Voiture/Chauffeur' %}
                                                <td> Aucun  </td>
                                            {% else %}
                                                <td> {{ entity.chauff }}  </td>
                                            {% endif %}
                                        <td>{{ entity.message }}</td>
                                        <td>{{ entity.etat }}</td>
                                        <td>{{ entity.dateRec|date('Y-m-d H:i:s') }}</td>
                                        <td>{{ entity.reponse }}   </td>
                                        {#                                            <div class="message-input rep">#}


                                        <td style="text-align: center; width: 110px;">
                                            <div class="fa-hover col-lg-3 col-md-6">
                                                <a href="{{ path('taxi_co__backDeleteRec', {id: entity.idR}) }}">
                                                    <i class="fa fa-trash-o text-danger"></i>
                                                </a>
                                            </div>
                                            <div class="fa-hover col-lg-3 col-md-6">
                                                {#                                                {{ form_widget(form.message) }}#}
                                                {#                                                <input type="text">#}

                                                <a href="{{ path('taxi_co__backupdateRec', {id: entity.idR}) }}">
                                                    {#                                                {{ form_widget(form.Ajouter) }}#}
                                                    <i class="fa fa-edit text-warning"></i>
                                                </a>
                                            </div>
                                            <div class="fa-hover col-lg-3 col-md-6">
                                                <a href="{{ path('taxi_co__BackmailRec') }}">
                                                    <i class="fa fa-envelope-o text-success"></i>
                                                </a>
                                            </div>

                                        </td>
                                        </tr>
                                    {% endfor %}
                                    {#                                {{ form_end(form) }}#}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% block javascripts %}

        <script src="{{ asset('sufee-admin-dashboard-master/vendors/datatables.net/js/jquery.dataTables.min.js') }}"></script>
        <script src="{{ asset('sufee-admin-dashboard-master/vendors/datatables.net-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
        <script src="{{ asset('sufee-admin-dashboard-master/vendors/datatables.net-buttons/js/dataTables.buttons.min.js') }}"></script>
        <script src="{{ asset('sufee-admin-dashboard-master/vendors/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js') }}"></script>
        <script src="{{ asset('sufee-admin-dashboard-master/vendors/jszip/dist/jszip.min.js') }}"></script>
        <script src="{{ asset('sufee-admin-dashboard-master/vendors/pdfmake/build/pdfmake.min.js') }}"></script>
        <script src="{{ asset('sufee-admin-dashboard-master/vendors/pdfmake/build/vfs_fonts.js') }}"></script>
        <script src="{{ asset('sufee-admin-dashboard-master/vendors/datatables.net-buttons/js/buttons.html5.min.js') }}"></script>
        <script src="{{ asset('sufee-admin-dashboard-master/vendors/datatables.net-buttons/js/buttons.print.min.js') }}"></script>
        <script src="{{ asset('sufee-admin-dashboard-master/vendors/datatables.net-buttons/js/buttons.colVis.min.js') }}"></script>
        <script src="{{ asset('sufee-admin-dashboard-master/assets/js/init-scripts/data-table/datatables-init.js') }}"></script>
        <script src="{{ asset('sufee-admin-dashboard-master/vendors/jquery/dist/jquery.min.js') }}"></script>
