{% extends "//baseRec.html.twig" %}
{% block contents %}
    <!--== Page Title Area Start ==-->
    <section id="page-title-area" rows="0" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2> Contactez nous</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p style="font-size: larger;">Dans tous les cas, n'hésitez pas à nous contacter en cas de besoin, vos demandes sont toujours les bienvenues.</p>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <!--== Page Title Area End ==-->

    <!--== Contact Page Area Start ==-->
    <div class="contact-page-wrao section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 m-auto">
                    <div class="contact-form">
                        {{ form_start(form) }}
                        <span class="title-line"><i class="fa fa-exclamation text-warning"></i></span> <strong>Objet :</strong>
                        <div class="message-input">

                            {{ form_widget(form.Objet) }}
                        </div>

                        <br><span class="title-line"><i class="fa fa-comments text-warning"></i></span> <strong>Message :</strong>
                        <div class="message-input">

                            {{ form_widget(form.message) }}
                        </div>
                        <div class="input-submit">
                            <button type="submit">Envoyer</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--== Contact Page Area End ==-->
{% endblock %}