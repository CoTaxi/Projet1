{% extends 'index.html.twig' %}
{% block contents %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Liste des contrats</strong>
                            <div class="topnav" >
                                <form method ="POST">


                                    <input type="text" placeholder="Search.." name ="nom">
                                    <input type="submit" value ="Rechercher">

                                </form>

                                <button class="btn  btn-link pull-right"
                                        id="right-panel-link"  style="color:#23272b">
                                    <a href="{{ path('contrat_add')}}">Ajouter un contrat</a>
                                </button>
                                <a href="{{ path('contrat_list')}}"class="btn btn-outline-secondary btn-sm"><i class="fa fa-search-minus "></i></a>

                            </div>

                        </div>

                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Email</th>
                                    <th>Type de Contrat</th>
                                    <th>Duree</th>
                                    <th>Options</th>
                                </tr>
                                </thead>
                                {% for entity in tabs %}
                                    {% for user in tabu %}
                                        {% if user.nom == entity.idchauff %}
                                            <tbody>
                                            <tr>
                                                <td>{{ user.nom}}</td>
                                                <td>{{user.prenom}}</td>
                                                <td>{{user.mail}}</td>
                                                <td>{{entity.typeC}}</td>
                                                <td>{{entity.duree}}</td>
                                                <td>

                                                    <a href="{{ path('contrat_delete',{'id':entity.typeC}) }}"class="btn btn-success btn-sm"><i class="fa fa-street-view"></i></a>
                                                    <a href="{{ path('contrat_update',{'id':entity.idContrat}) }}"class="btn btn-primary btn-sm"><i class="fa fa-pencil"></i></a>
                                                    <a href="{{ path('contrat_delete',{'id':entity.idContrat}) }}"class="btn btn-danger btn-sm"><i class="fa fa-trash-o "></i></a>

                                                    <button class="btn btn-outline-secondary btn-sm"><i class="fa fa-download "></i></button>
                                                </td>
                                            </tr>
                                            </tbody>
                                        {% endif %}
                                    {% endfor %}
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->
{% endblock %}