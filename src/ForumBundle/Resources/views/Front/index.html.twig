
{% extends'layout.html.twig' %}
{% block title %} Forum {% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
{% block contents %}

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Our Latest Articles</h2>

                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
                <a href="{{path('forum_add')}}" class="readmore-btn" style=" position: relative;margin-left: 494px;">Add New <i class="fa fa-long-arrow-right"></i></a>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>

<!--== Page Title Area End ==-->
    <div id="blog-page-content" class="section-padding">
    <div class="container">
    <div class="row">
      {% for f in f %}

          <div class="col-lg-12">
          <article class="single-article">
          <div class="row">
        <!-- Articles Thumbnail Start -->
        <div class="col-lg-5">
            <div class="article-thumb">
                <img src={{asset('assets/img/article/arti-thumb-1.jpg')}} alt="JSOFT">
            </div>
        </div>
        <!-- Articles Thumbnail End -->

        <!-- Articles Content Start -->
        <div class="col-lg-7">
            <div class="display-table">
                <div class="display-table-cell">
                    <div class="article-body">
                        <h3><a href="article-details.html">{{f.title}}</a></h3>
                        <div class="article-meta">
                            <a href="#" class="author">By :: <span>Admin</span></a>
                            <a href="#" class="commnet">Comments :: <span>10</span></a>
                        </div>

                        <div class="article-date">{{ f.created |date('Y-m-d H:i:s')}}</div>

                        <p>{{ f.content }}</p>

                        <a href="article-details.html" class="readmore-btn">Read More <i class="fa fa-long-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Articles Content End -->
    </div>
          </article>
          </div>
    {% endfor %}

    </div>
    </div>
    </div>
{% endblock %}
{% endblock %}