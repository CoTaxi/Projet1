{% extends'layout.html.twig' %}

        {% block bg %}
            <section class="inner-banner">
                <div class="container">
                    <ul class="thm-breadcrumb">
                        <li><a href="index-2.html">TaxiCo</a></li>
                        <li><span class="sep">.</span></li>
                        <li><span class="page-title">Blog</span></li>
                    </ul><!-- /.thm-breadcrumb -->
                    <h2>Nos Articles</h2>
                </div><!-- /.container -->
            </section><!-- /.inner-banner -->
        {% endblock %}

{% block contents %}

    <section class="blog-style-one blog-page">
        <div class="container">
            <div class="row">
                {% for f in f %}
                <div class="col-xl-6 col-lg-12">
                    <div class="single-blog-style-one">
                        <div class="image-block">
                            <div class="inner-block">
                                <a href="{{ path('forum_one', { 'f': f.id}) }}"><i class="fa fa-link"></i></a>
                                <img src="{{asset('uploads/media/'~f.image)}}" alt="Awesome Image" />
                            </div><!-- /.inner-block -->
                        </div><!-- /.image-block -->
                        <div class="text-block">
                            <div class="meta-info">
                                <a href="#" class="date-block">{{ f.created |date('Y-m-d H:i:s')}}</a>
                                <a href="#">{{f.title}}</a>
                                <span class="sep">.</span>
                                <a href="#">3 Comments</a>
                            </div><!-- /.meta-info -->
                            <p>{{ f.content|raw }}</p>

                            <a href="{{ path('forum_one', { 'f': f.id}) }}" class="readmore-btn">Read More <i class="fa fa-long-arrow-right"></i></a>
                        </div><!-- /.text-block -->
                    </div><!-- /.single-blog-style-one -->
                </div><!-- /.col-xl-6 col-lg-12 -->
                {% endfor %}
                <div class="text-center">{{ knp_pagination_render(f) }}</div>
            </div><!-- /.row -->
        </div><!-- /.container -->
    </section><!-- /.blog-style-one -->

{% endblock %}