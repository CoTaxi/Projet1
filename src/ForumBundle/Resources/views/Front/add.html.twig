                </div><!-- /.container -->
            </section><!-- /.inner-banner -->
        {% endblock %}
{% block contents %}
    <section class="contact-form-style-one">
        <div class="container">
            <div class="block-title text-center">
                <div class="dot-line"></div><!-- /.dot-line -->
                <h2>Ajouter Article</h2>
            </div><!-- /.block-title -->
            {{ form_start(form,{'attr': {'class' : 'contact-form-one row'}}) }}
            <div class="col-lg-6">
                <div class="input-holder">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control','placeholder': 'Title'}}) }}
                </div><!-- /.input-holder -->
            </div><!-- /.col-lg-6 -->
            <div class="col-lg-12">
                <div class="input-holder">
                    <div role="wrapper" class="gj-datepicker gj-datepicker-bootstrap gj-unselectable input-group" style="width: 900px;">
                        {{ form_widget(form.content, {'attr': {'class': 'form-control','placeholder': 'Content'}}) }}
                    </div>
                </div><!-- /.input-holder -->
            </div><!-- /.col-lg-6 -->
            <div class="col-lg-6">
                <div class="input-holder">
                    {{ form_widget(form.image, {'attr': {'class': 'form-control','placeholder': 'Image'}}) }}
                </div><!-- /.input-holder -->
            </div><!-- /.col-lg-6 -->

            <div class="col-lg-12">
                <div class="input-holder text-center">
                    {{ form_widget(form.Add,{'attr': {'class': 'book-now-btn'}})}}
                </div><!-- /.input-holder -->
            </div><!-- /.col-lg-6 -->
            {{ form_end(form) }}
        </div><!-- /.container -->
    </section><!-- /.contact-form-style-one -->








{% endblock %}