
{% extends'layoutback.html.twig' %}
{% block title %} Forum {% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
{% block content %}
  <div class="row">
{% for f in f  %}
    <div class="col-md-6">
        <!-- Box Comment -->
        <div class="card card-widget">
            <div class="card-header">
                <div class="user-block">

                    <span class="username"><a href="#">Jonathan Burke Jr.</a></span>
                    <span class="description">{{ f.created |date('Y-m-d H:i:s')}}</span>
                </div>
                <!-- /.user-block -->
                <div class="card-tools">
                    {% if f.etat==0 %}
                    <a type="button" class="btn btn-block btn-success " href="{{ path('archiver', { 'id': f.id }) }}" > Active  </a>
                    {% elseif f.etat==1 %}
                        <a type="button" class="btn btn-block btn-danger" href="{{ path('desarchiver', { 'id': f.id }) }}"> Archived  </a>
                       {% endif %}
                        <a type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
                    </a>
                    <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i>
                    </button>
                </div>
                <!-- /.card-tools -->
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <a href="">{{ f.title }}</a>
                <img class="img-fluid pad" src="{{asset('uploads/media/'~f.image)}}" alt="Photo">

                <p>{{ f.content|raw  }}</p>

                <span class="float-right text-muted"> 3 comments</span>
            </div>
            <!-- /.card-body -->

            <!-- /.card-footer -->
            <div class="card-footer">
                <form action="#" method="post">
                    <img class="img-fluid img-circle img-sm" src="../dist/img/user4-128x128.jpg" alt="Alt Text">
                    <!-- .img-push is used to add margin to elements next to floating images -->
                    <div class="img-push">
                        <input type="text" class="form-control form-control-sm" placeholder="Press enter to post comment">
                    </div>
                </form>
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
{% endfor %}

      <div class="text-center">{{ knp_pagination_render(f) }}</div>

  </div>
{% endblock %}
{% endblock %}
